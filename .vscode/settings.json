{
    "explorer.confirmDelete": false,
    "editor.formatOnSave": true,
    "vetur.format.defaultFormatter.html": "js-beautify-html",
    "[vue]": {
        "editor.defaultFormatter": "Dart-Code.flutter",
    },
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "explorer.confirmDragAndDrop": false,
    "search.exclude": {
        "**/.firebase": true,
        "**/*.svg": true,
        "**/dist": true
    },
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            0,
            1,
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": "off"
    },
    "todo-tree.tree.showScanModeButton": false,
    "git.enableSmartCommit": true,
    "workbench.editorAssociations": {},
    "git.confirmSync": false,
    "liveServer.settings.donotShowInfoMsg": true,
    "explorer.experimental.fileNesting.enabled": true,
    "explorer.experimental.fileNesting.expand": false,
    "explorer.experimental.fileNesting.patterns": {
        "pubspec.yaml": ".flutter-plugins, .packages, .dart_tool, .flutter-plugins-dependencies, .metadata, .packages, pubspec.lock, build.yaml, analysis_options.yaml, all_lint_rules.yaml, flutter_native_splash.yaml, l10n.yaml",
        ".gitignore": ".gitattributes, .gitmodules, .gitmessage, .mailmap, .git-blame*",
        "readme.*": "authors, backers.md, changelog*, citation*, code_of_conduct.md, codeowners, contributing.md, contributors, copying, credits, governance.md, history.md, license*, maintainers, readme*, security.md, sponsors.md",
        "*.dart": "$(capture).g.dart, $(capture).freezed.dart",
    },
    "editor.inlineSuggest.enabled": true,
    "[python]": {
        "editor.formatOnType": true
    },
    "git.openRepositoryInParentFolders": "always",
    "workbench.colorTheme": "Night Owl (No Italics)",
    "workbench.colorCustomizations": {
        "[Community Material Theme Darker]": {
            "statusBar.debuggingBackground": "#1a6e74"
        }
    },
    "material-icon-theme.folders.associations": {
        "exceptions": "error",
        "common_widgets": "shared",
        "features": "components",
        "domain": "class",
        "presentation": "theme",
        "application": "controller",
    },
    "dart.previewFlutterUiGuides": true,
    "dart.previewFlutterUiGuidesCustomTracking": true,
    "workbench.iconTheme": "material-icon-theme",
    "editor.fontFamily": "Fira Code",
    "editor.fontWeight": "500",
    "editor.fontLigatures": true,
    "terminal.integrated.fontFamily": "monospace",
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": true,
        "scminput": false,
        "yaml": true,
        "dart": true,
        "typescript": true
    },
    "redhat.telemetry.enabled": true,
    "git.autoRepositoryDetection": true,
    "files.exclude": {
        "**/*.freezed.dart": true,
        "**/*.g.dart": true
    },
    "window.zoomLevel": 2,
    "debug.toolBarLocation": "commandCenter",
    "explorer.compactFolders": true,
    "terminal.integrated.enableMultiLinePasteWarning": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.validate.enable": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "never",
        "source.organizeImports": "always"
    },
}